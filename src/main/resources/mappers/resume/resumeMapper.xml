    <!--이력서 작성-->
    <insert id="insertResume" parameterType="Resume" useGeneratedKeys="true" keyProperty="resumeId">

        INSERT INTO t_resume (

            RESUME_ID
            , USER_ID
            , RESUME_NM
            , RESUME_WRT_DT
            , RESUME_UDT_DT

        ) VALUES (
            #{resumeId}
            , #{userId}
            , #{resumeName}
            , NOW()
            , NOW()

        ) ON DUPLICATE KEY UPDATE
            RESUME_NM = #{resumeName}
            , RESUME_UDT_DT = NOW()

    </insert>


    <insert id="insertResumePersonal">

        INSERT INTO t_resume_personal (

            PERSONAL_ID
            , RESUME_ID
            , PERSONAL_NM
            , PERSONAL_BIRTH_DT
            , PERSONAL_PHONE
            , PERSONAL_SNS
            , PERSONAL_ADDR
            , PERSONAL_IMAGE
            , PERSONAL_EMAIL
            , PERSONAL_GENDER

        ) VALUES (

            #{personalId}
            , #{resumeId}
            , #{personalName}
            , #{personalBirthDate}
            , #{personalPhone}
            , #{personalSns}
            , #{personalAddress}
            , #{personalImage}
            , #{personalEmail}
            , #{personalGender}

        ) ON DUPLICATE KEY UPDATE

            PERSONAL_NM = #{personalName}
            , PERSONAL_BIRTH_DT = #{personalBirthDate}
            , PERSONAL_PHONE = #{personalPhone}
            , PERSONAL_SNS = #{personalSns}
            , PERSONAL_ADDR = #{personalAddress}
            , PERSONAL_IMAGE = #{personalImage}
            , PERSONAL_EMAIL = #{personalEmail}
            , PERSONAL_GENDER = #{personalGender}

    </insert>

